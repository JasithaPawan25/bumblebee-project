<!DOCTYPE web-app  PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <!-- Define your servlets here -->
  <servlet>
    <servlet-name>MyServlet</servlet-name>
    <servlet-class>com.example.MyServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductController</servlet-name>
  	<display-name>ProductController</display-name>
  	<description>this will handle all the requests related to products</description>
  	<servlet-class>com.codewithjasitha.bumlblebee.project.controller.ProductController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CategoryController</servlet-name>
  	<display-name>CategoryController</display-name>
  	<description>this will handle all the category related APIs</description>
  	<servlet-class>com.codewithjasitha.bumlblebee.project.controller.CategoryController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>BrandController</servlet-name>
  	<display-name>BrandController</display-name>
  	<description>this will handle all the Apis related to Brand</description>
  	<servlet-class>com.codewithjasitha.bumlblebee.project.controller.BrandController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>InventoryController</servlet-name>
  	<display-name>InventoryController</display-name>
  	<description>This will handle all the Api which related to Inventory management</description>
  	<servlet-class>com.codewithjasitha.bumlblebee.project.controller.InventoryController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CustomerInfoController</servlet-name>
  	<display-name>CustomerInfoController</display-name>
  	<description>this will display all the customer data </description>
  	<servlet-class>com.codewithjasitha.bumlblebee.project.controller.CustomerInfoController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AdminLoginController</servlet-name>
  	<display-name>AdminLoginController</display-name>
  	<description>This will handle the admin login</description>
  	<servlet-class>com.codewithjasitha.bumlblebee.project.controller.AdminLoginController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MyServlet</servlet-name>
    <url-pattern>/myservlet/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductController</servlet-name>
  	<url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductController</servlet-name>
  	<url-pattern>/welcome</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CategoryController</servlet-name>
  	<url-pattern>/category</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CategoryController</servlet-name>
  	<url-pattern>/categoryitems</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>BrandController</servlet-name>
  	<url-pattern>/brand</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>BrandController</servlet-name>
  	<url-pattern>/branditems</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>InventoryController</servlet-name>
  	<url-pattern>/inventory</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>InventoryController</servlet-name>
  	<url-pattern>/inventoryitems</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CustomerInfoController</servlet-name>
  	<url-pattern>/customerinfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AdminLoginController</servlet-name>
  	<url-pattern>/admin</url-pattern>
  </servlet-mapping>
</web-app>
